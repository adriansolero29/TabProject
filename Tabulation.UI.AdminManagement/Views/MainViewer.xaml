<UserControl
    x:Class="Tabulation.UI.AdminManagement.Views.MainViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tabulation.UI.AdminManagement.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="20,20,10,10"
                VerticalAlignment="Bottom"
                FontFamily="Arial"
                FontSize="30"
                FontWeight="SemiBold"
                Text="TEST LABEL" />

            <Grid Grid.Row="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <GroupBox
                    Grid.Row="0"
                    Header="Criterias"
                    Style="{DynamicResource MaterialDesignCardGroupBox}">
                    <DataGrid>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Name" />
                            <DataGridTextColumn Width="*" Header="Percentage" />
                        </DataGrid.Columns>

                    </DataGrid>
                </GroupBox>

                <GroupBox
                    Grid.Row="1"
                    Header="Candidates"
                    Style="{DynamicResource MaterialDesignCardGroupBox}">
                    <DataGrid>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Name" />
                            <DataGridTextColumn Width="*" Header="Candidate No" />
                            <DataGridTextColumn Width="*" Header="Sequence" />
                            <DataGridTextColumn Width="*" Header="Candidate Type" />
                        </DataGrid.Columns>

                    </DataGrid>
                </GroupBox>

                <GroupBox
                    Grid.Row="2"
                    Header="Judges"
                    Style="{DynamicResource MaterialDesignCardGroupBox}">
                    <DataGrid>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Name" />
                        </DataGrid.Columns>

                    </DataGrid>
                </GroupBox>

            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
